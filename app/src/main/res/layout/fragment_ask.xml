<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivBanner"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/imagenpregunta" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="PaÃ­s"
                android:textStyle="bold"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_marginLeft="10dp"/>

            <Spinner
                android:id="@+id/spnCountry"
                android:layout_width="294dp"
                android:layout_height="26dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Torneo"
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_marginLeft="10dp"/>

        <Spinner
            android:id="@+id/spnLeague"
            android:layout_width="294dp"
            android:layout_height="26dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Equipo"
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_marginLeft="10dp"/>

        <Spinner
            android:id="@+id/spnTeam"
            android:layout_width="297dp"
            android:layout_height="26dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/tvCanTeamClassifier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/can_team_classifier"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceMedium"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnAsk"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_margin="10dp"
        android:layout_gravity="bottom"
        android:text="Preguntar a Sabio"
        android:textColor="#FFFFFF"
        android:typeface="serif"
        android:textSize="20dp"
        android:background="#548a45"
        android:textStyle="bold" />

</LinearLayout>
